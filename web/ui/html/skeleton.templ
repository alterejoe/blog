package html

import "github.com/alterejoe/blog/ui/html/layouts"

type SkeletonProps struct {
	Page string
}

templ FullPage(content templ.Component) {
	@layouts.DoctypeStandard() {
		<div class="flex flex-row relative">
			@layouts.NavClosed(&layouts.NavProps{})
			@layouts.LogoutNavClosed(&layouts.LogoutNavProps{})
		</div>
		<div class="flex flex-1 flex-row min-h-0 p-5">
			@SkeletonContainer(content)
		</div>
	}
}

templ SkeletonContainer(content templ.Component) {
	<div
		id="skeleton"
		class="flex-1 flex flex-col min-h-0 transition-opacity duration-200 ease-in opacity-200"
	>
		@content
		<style>
			#skeleton.htmx-swapping {
				opacity: 0;
			}
		</style>
	</div>
}
